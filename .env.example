# TradesCompass Pro Environment Variables
# Copy this file to .env and fill in your actual API keys
# Never commit the .env file to version control

# Database Configuration (automatically provided by Replit)
DATABASE_URL=postgresql://user:password@localhost/dbname

# Session Security
SESSION_SECRET=your-secret-key-here-change-in-production

# Core AI Service (Required)
OPENAI_API_KEY=sk-your-openai-api-key

# Job Search APIs (Optional - at least one recommended)
RAPIDAPI_KEY=your-rapidapi-key  # For JSearch (150,000+ sources)
ZIPRECRUITER_API_KEY=your-ziprecruiter-key
INDEED_PUBLISHER_ID=your-indeed-publisher-id
USAJOBS_API_KEY=your-usajobs-key
USAJOBS_USER_AGENT=your-app-name

# External Sourcing APIs (Optional - enable as needed)
GITHUB_TOKEN=ghp_your-github-token
PEOPLEDATA_KEY=your-peopledata-api-key
SEEKOUT_API_KEY=your-seekout-api-key
SOURCEHUB_API_KEY=your-sourcehub-api-key

# Email Processing (Optional)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
EMAIL_FOLDER=INBOX
EMAIL_CHECK_INTERVAL=300

# Salesforce Integration (Optional)
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-security-token

# SendGrid Email Service (Optional)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourcompany.com